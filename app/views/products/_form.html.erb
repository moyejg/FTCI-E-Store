<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :name, placeholder: "Product Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :price, placeholder: "Price", class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.number_field :quantity, placeholder: "Quantity", class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.text_area :description, placeholder: "Describe the Product", class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.text_field :brand, placeholder: "Brand", class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.number_field :rating, placeholder: "Rating", class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.select :category_id, @categories.collect { |c| [c.name, c.id] }, { include_blank: "Please select a category" } %>
  </div>

  <div class="form-group">
    <strong>Upload a Product Image: </strong>
    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
